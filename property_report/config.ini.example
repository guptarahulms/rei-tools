[rentcast]
# Get your API key from https://app.rentcast.io/app/api
api_key = YOUR_API_KEY_HERE
base_url = https://api.rentcast.io/v1

[filters]
# Property type: Single Family, Condo, Townhouse, Multi-Family, Manufactured, Apartment, Land
property_types = Single Family, Condo, Townhouse, Multi-Family
# Listing status: Active for available for sale
status = Active
# Maximum number of listings to fetch per zip code
limit = 10

# Zip code specific filters
# Format: [zipcode_XXXXX] where XXXXX is the zip code
# Each zip code section can have price and sqft ranges
# Range format: min:max (use * for no limit, e.g., *:250000 or 1000:*)

[zipcode_19146]
price = 100:250000
sqft = 1000:3000

[zipcode_19143]
price = 100:300000
sqft = 800:2500

[avm]
# Maximum radius in miles for comparable properties
max_radius = 1
# Maximum days old for sold comparables (180 = last 6 months)
days_old = 180
# Number of comparables to fetch
comp_count = 20

[costs]
# Per square foot build up cost in USD
build_up_cost_per_sqft = 75
# Financing cost percentage (as decimal, e.g., 0.12 = 12%)
financing_rate = 0.12

[decision]
# Minimum upside threshold for "Yes" decision (USD)
upside_threshold = 30000

[email]
# SMTP server settings
smtp_server = smtp.gmail.com
smtp_port = 587
# Sender email address
sender_email = your_email@gmail.com
# Sender email password or app password (use App Password for Gmail)
sender_password = YOUR_APP_PASSWORD_HERE
# Recipient email addresses (comma-separated)
recipient_emails = recipient@example.com
